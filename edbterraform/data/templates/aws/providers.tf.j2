provider "aws" {
}

{% for region in regions.keys() %}
{%   set region_ = region | replace('-', '_') %}
provider "aws" {
  region = "{{ region }}"
  alias = "{{ region_ }}"
}

{%   if has_kubernetes %}

provider "kubernetes" {
  alias = "{{ region_ }}"
}

{%   endif %}

{% endfor %}

{% if has_biganimal %}
provider "biganimal" {
  # BA_BEARER_TOKEN environment variable
  # BA_API_URI environment variable, optional
  alias = "default"
}

terraform {
  required_providers {
    biganimal = {
      source  = "EnterpriseDB/biganimal"
    }
  }
}

{% endif %}
